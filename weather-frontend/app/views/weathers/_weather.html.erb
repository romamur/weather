<%# locals: (weather: []) %>

<% if weather.present? %>
  <% weather.each do |city| %>
    <div class="flex flex-col w-full max-w-[320px] leading-1.5 p-4 border-gray-200 bg-gray-100 rounded-e-xl rounded-es-xl mb-2">
      <div class="flex items-center space-x-2 rtl:space-x-reverse">
        <span class="text-sm font-normal text-gray-500"><%= city['ts'].to_datetime.strftime('%T') %></span>
        <span class="text-sm font-semibold text-gray-900"><%= city['name'] %></span>
        <span class="text-sm font-normal text-gray-500"> <%= city['temp'] %></span>
      </div>
    </div>
  <% end %>
<% else %>
  Скоро тут будет погода...
<% end %>
